<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.ninokhodabandeh.notax.ResultActivity">

    <FrameLayout
        android:id="@+id/listFragment_container"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"/>

    <fragment
        android:id="@+id/detailFragment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.example.ninokhodabandeh.notax.ApiResultDetailFragment"/>

</LinearLayout>
